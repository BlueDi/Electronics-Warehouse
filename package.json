{
  "name": "LDSOt4g3",
  "version": "0.4.0",
  "description": "LDSO - T4G3 - Warehouse",
  "main": "app.js",
  "scripts": {
    "config": "node build/scripts/config.js",
    "clean": "rimraf public config/*.json build/serverRenderer.*",
    "webpack": "webpack --progress --hide-modules --config build/webpack/config.js",
    "build": "cross-env NODE_ENV=production npm-run-all clean config webpack",
    "build:analyze": "cross-env ANALYZE_MODE=enabled npm run build",
    "postinstall": "npm run build",
    "dev:app": "cross-env NODE_ENV=development node app.js",
    "dev:api": "nodemon --exec node api.js",
    "dev": "npm-run-all clean config && run-p dev:api dev:app",
    "start:app": "cross-env NODE_ENV=production node app.js",
    "start:api": "cross-env NODE_ENV=production node api.js",
    "start": "run-p start:api start:app",
    "lint": "npm-run-all lint:js lint:style",
    "lint:style": "stylelint *.scss --syntax=scss --fix",
    "lint:js": "eslint . --fix",
    "test": "rimraf coverage && npm run lint:js && cross-env NODE_ENV=test jest --detectOpenHandles && codecov",
    "test:update": "rimraf coverage && npm run lint:js && cross-env NODE_ENV=test jest -u --detectOpenHandles",
    "test:watch": "npm test -- --watch"
  },
  "verbose": true,
  "engines": {
    "node": "8.x"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/ldso18-19/t4g3.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:js",
      "git add"
    ],
    "*.scss": [
      "npm run lint:style",
      "git add"
    ]
  },
  "keywords": [
    "ssr",
    "express",
    "react",
    "ldso",
    "feup"
  ],
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "@devexpress/dx-react-core": "^1.9.0",
    "@devexpress/dx-react-grid": "^1.9.0",
    "@devexpress/dx-react-grid-material-ui": "^1.9.0",
    "@material-ui/core": "^3.6.0",
    "@material-ui/icons": "^3.0.1",
    "axios": "^0.18.0",
    "babel-plugin-react-css-modules": "^4.0.0",
    "classnames": "^2.2.6",
    "compression": "^1.7.3",
    "connect-pg-simple": "^5.0.0",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.5",
    "detect-node": "^2.0.4",
    "dotenv": "^6.1.0",
    "dotenv-parse-variables": "^0.2.0",
    "esm": "^3.0.84",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "helmet": "^3.15.0",
    "hpp": "^0.2.2",
    "html-minifier": "^3.5.21",
    "http-proxy": "^1.17.0",
    "is-plain-object": "^2.0.4",
    "isdev": "^1.0.1",
    "lodash": "^4.17.11",
    "make-promises-safe": "^4.0.0",
    "module-alias": "^2.1.0",
    "morgan": "^1.9.1",
    "nock": "^10.0.2",
    "nodemailer": "^4.7.0",
    "pg-promise": "^8.5.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-cookie": "^3.0.6",
    "react-dom": "^16.6.3",
    "react-helmet": "^5.2.0",
    "react-html-parser": "^2.0.2",
    "react-numeric-input": "^2.2.3",
    "react-router-config": "^4.4.0-beta.6",
    "react-router-dom": "^4.4.0-beta.6",
    "react-s-alert": "^1.4.1",
    "react-universal-component": "^3.0.3",
    "rimraf": "^2.6.2",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.83.0",
    "serialize-javascript": "^1.5.0",
    "serve-favicon": "^2.5.0",
    "session-file-store": "^1.2.0",
    "slash": "^2.0.0",
    "webpack-flush-chunks": "^2.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.5",
    "@babel/core": "^7.1.6",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-transform-strict-mode": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@babel/preset-react": "^7.0.0",
    "autoprefixer": "^9.3.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.20",
    "babel-plugin-universal-import": "^3.1.2",
    "babel-plugin-webpack-alias": "^2.1.2",
    "codecov": "^3.1.0",
    "copy-webpack-plugin": "^4.6.0",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.1",
    "enzyme": "^3.7.0",
    "eslint": "^5.9.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-jest": "^22.1.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "eventsource-polyfill": "^0.9.6",
    "extract-css-chunks-webpack-plugin": "^3.2.1",
    "file-loader": "^2.0.0",
    "husky": "^1.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "lint-staged": "^8.1.0",
    "node-sass": "^4.10.0",
    "nodemon": "^1.18.7",
    "npm-run-all": "^4.1.5",
    "offline-plugin": "^5.0.6",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-nested": "^4.1.0",
    "postcss-scss": "^2.0.0",
    "prettier": "^1.15.2",
    "react-hot-loader": "^4.3.12",
    "react-test-renderer": "^16.6.3",
    "regenerator-runtime": "^0.12.1",
    "sass-loader": "^7.1.0",
    "stats-webpack-plugin": "^0.7.0",
    "style-loader": "^0.23.1",
    "stylelint": "^9.9.0",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-scss": "^3.4.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.26.1",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-middleware": "^3.4.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-hot-server-middleware": "^0.5.0"
  },
  "nodemonConfig": {
    "ignore": [
      "sessions/*"
    ],
    "watch": [
      "src/api/*"
    ],
    "debug": true,
    "ext": "js jsx",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "grid": true,
        "flexbox": "no-2009"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "prettier",
      "jest"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "settings": {
      "react": {
        "version": "16.6.1"
      }
    },
    "rules": {
      "global-require": 0,
      "no-global-assign": 0,
      "no-console": 0,
      "react/prop-types": 0,
      "react/display-name": 0,
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    }
  },
  "eslintIgnore": [
    "coverage",
    "logs",
    "public/**/*.js",
    "build/serverRenderer.*"
  ],
  "stylelint": {
    "plugins": [
      "stylelint-scss"
    ],
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "selector-max-id": 1,
      "selector-class-pattern": null,
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "composes"
          ]
        }
      ]
    }
  },
  "jest": {
    "coverageReporters": [
      "json",
      "json-summary",
      "lcov",
      "text",
      "clover"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/resources/mocks/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/resources/mocks/styleMock.js"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.jsx?$",
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "_moduleAliases": {
    "@root": ".",
    "@bin": "bin",
    "@build": "build",
    "@public": "public",
    "@resources": "resources",
    "@assets": "resources/assets",
    "@config": "config",
    "@utils": "src/utils",
    "@api": "src/api",
    "@app": "src/app",
    "@common": "src/app/common",
    "@pages": "src/app/pages",
    "@middlewares": "src/middlewares"
  }
}
